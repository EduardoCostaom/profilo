load("//tools/build_defs/oss:profilo_defs.bzl", "profilo_cxx_binary", "profilo_cxx_test", "profilo_path")

profilo_cxx_binary(
    name = "procfs_perf",
    srcs = [
        "procfs_perf.cpp",
    ],
    compiler_flags = [
        "-fexceptions",
        "-frtti",
        "-DLOG_TAG=\"Profilo\"",
        "-g3",
        "-fPIE",
    ],
    linker_flags = [
        "-pie",
    ],
    deps = [
        profilo_path("cpp/util:util"),
    ],
)

